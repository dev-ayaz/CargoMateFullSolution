@model CargoMate.Web.FrontEnd.Models.CustomerViewModels.CompanyFormModel

@{
    ViewBag.Title = "Create";
}
<style>
    .intl-tel-input.allow-dropdown {
        width: 100%;
    }
</style>
@section styles{
    <link href="~/Scripts/Plugins/InternationalTelephoneInput/css/intlTelInput.css" rel="stylesheet" />
}
<section id="hero" class="login">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-10 col-sm-offset-1">
                <div id="login" class="login-min-height">
                    <div class="text-center">
                        <h3 class="text-left"><i class="icon-building"></i> Company Registration</h3>
                        <p class="text-left pl-3">*Please provide valid details to get better services.</p>
                    </div>
                    <hr />
                    @using (Ajax.BeginForm("Create", null, new AjaxOptions { HttpMethod = "POST", OnSuccess = "Company.Callbacks.InsertSuccess" }, new { id = "CompanyForm" }))
                    {
                        @* Left column *@
                        <div class="col-xs-12 col-sm-6 col-md-push-1 float-right-left">
                            <div class="form-group">
                                <label class="col-xs-12 px-0">Name</label>
                                <div class="col-xs-12 col-sm-10 px-0">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Company Name" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-xs-12 px-0">Company registeration number</label>
                                <div class="col-xs-12 col-sm-10 px-0">
                                    @Html.EditorFor(model => model.CrNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "CR Number" } })
                                    @Html.ValidationMessageFor(model => model.CrNumber, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-xs-12 px-0">Phone</label>
                                <div class="col-xs-12 col-sm-10 px-0">
                                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "+966 xxxxxxxxx" } })
                                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        @* Right column *@
                        <div class="col-xs-12 col-sm-6 float-right-left">
                            <div class="form-group">
                                <label class="col-xs-12 px-0">Company Logo</label>
                                <div class="col-xs-12 col-sm-10 px-0">
                                    @Html.Editor("CompanyLogo", new { htmlAttributes = new { @class = "form-control", type = "file" } })
                                    @Html.HiddenFor(model => model.Logo)
                                    @Html.ValidationMessageFor(model => model.Logo, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-xs-12 px-0">Website URL</label>
                                <div class="col-xs-12 col-sm-10 px-0">
                                    @Html.EditorFor(model => model.WebSiteUrl, new { htmlAttributes = new { @class = "form-control", placeholder = "www.yourcompany.com" } })
                                    @Html.ValidationMessageFor(model => model.WebSiteUrl, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-xs-12 px-0">Country Name</label>
                                <div class="col-xs-12 col-sm-10 px-0">
                                    @Html.EditorFor(model => model.CountryId, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                                    @Html.ValidationMessageFor(model => model.CountryId, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>
                        <div class="col-xs-12 col-sm-10 col-sm-offset-1">
                            <div id="googleMap" style="width: 100%; height: 200px">

                            </div>
                        </div>
                        <div id="pass-info" class="clearfix"></div>
                        <div class="col-xs-12 col-sm-11 text-right px-10">
                            <button class="btn_1 d-inline-block">Register your company</button>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>

@section scripts{

    <script src="~/AppScripts/Company/Company.js"></script>
    <script src="~/AppScripts/Company/MapSetup.js"></script>
    <script src="~/Scripts/Plugins/InternationalTelephoneInput/js/intlTelInput.js"></script>
    <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?libraries=places&key=AIzaSyC88G_-I2GZl8sVDs95qoxcuqBy9_q36nQ&force=lite&callback=CompanyMap.initEvents"></script>
    <script src="~/Scripts/Plugins/jquery.placepicker.min.js"></script>
}