@model CargoMate.Web.FrontEnd.Models.VehicleRegistrationModels.VehicleScan

<div id="login" class="login-min-height my-0 py-0">
    <div class="text-center">
        <h3 class="text-left"><i class="icon-list-1"></i> Vehicle Scan</h3>
        <p class="text-left pl-3">*Please provide valid information to get better services.</p>
    </div>
    <hr />
        @* Left column *@
        @Html.HiddenFor(model=>model.VehicleId)
        <div class="col-xs-12 col-sm-6 col-md-push-1 float-right-left">
            <div class="form-group">
                <label class="col-xs-12 px-0">Registration Number</label>
                <div class="col-xs-12 col-sm-10 px-0">
                    @Html.EditorFor(model => model.RegistrationNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Registration Number" } })
                    @Html.ValidationMessageFor(model => model.RegistrationNumber, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-xs-12 px-0"><i class="icon-calendar-7"></i> Registration Expirey</label>
                <div class="col-xs-12 col-sm-10 px-0">
                    @Html.EditorFor(model => model.RegistrationExpiry, new { htmlAttributes = new { @class = "form-control date-pick", placeholder = "M d, D" }})
                    @Html.ValidationMessageFor(model => model.RegistrationExpiry, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-xs-12 px-0">Registeration Image</label>
                <div class="col-xs-12 col-sm-10 px-0">
                    
                    @Html.HiddenFor(model => model.RegistrationImage)
                    @Html.Editor("ImageSrc", new { htmlAttributes = new { @class = "form-control", type = "file" } })
                    @Html.ValidationMessageFor(model => model.RegistrationImage, "", new { @class = "text-danger" })
                    <small>*Please take a clean picture from your registeration and upload</small>
                </div>
            </div>
        </div>

        @* Right column *@
        <div class="col-xs-12 col-sm-6 float-right-left">

            <div class="form-group">
                <label class="col-xs-12 px-0">Plate Number</label>
                <div class="col-xs-12 col-sm-10 px-0">
                    @Html.EditorFor(model => model.PlateNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Plate Number" } })
                    @Html.ValidationMessageFor(model => model.PlateNumber, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-xs-12 px-0">Engine Number</label>
                <div class="col-xs-12 col-sm-10 px-0">
                    @Html.EditorFor(model => model.EngineNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Engine Number" } })
                    @Html.ValidationMessageFor(model => model.EngineNumber, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>

        <div id="pass-info" class="clearfix"></div>
        <div class="col-xs-12 col-sm-11 text-right px-10">
            <button type="submit" class="btn_1 d-inline-block"> Save Scan Info <i class="icon-angle-double-right rotate-180"></i></button>
        </div>

</div>