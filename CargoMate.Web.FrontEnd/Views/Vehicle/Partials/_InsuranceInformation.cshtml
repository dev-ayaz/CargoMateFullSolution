@model CargoMate.Web.FrontEnd.Models.VehicleRegistrationModels.InsuranceInformation
<div id="login" class="login-min-height my-0 py-0">
    <div class="text-center">
        <h3 class="text-left"><i class="icon-list-1"></i> Insurance Information</h3>
        <p class="text-left pl-3">*Please provide valid information to get better services.</p>
    </div>
    <hr />

    @* Left column *@
    @Html.HiddenFor(model => model.VehicleId)
    <div class="col-xs-12 col-sm-6 col-md-push-1 float-right-left">
        <div class="form-group">
            <label class="col-xs-12 px-0">Insurance Company</label>
            <div class="col-xs-12 col-sm-10 px-0">
                @Html.DropDownListFor(model => model.InsuranceCompanyId, new SelectList(string.Empty, "Value", "Text"), "Please Search Insurance Company", new { @class = "form-control select2" })
                @Html.ValidationMessageFor(model => model.InsuranceCompanyId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-xs-12 px-0"> Policy Number</label>
            <div class="col-xs-12 col-sm-10 px-0">
                @Html.EditorFor(model => model.PolicyNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Policy Number" } })
                @Html.ValidationMessageFor(model => model.PolicyNumber, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    @* Right column *@
    <div class="col-xs-12 col-sm-6 float-right-left">

        <div class="form-group">
            <label class="col-xs-12 px-0">Insurance Amount</label>
            <div class="col-xs-12 col-sm-10 px-0">
                @Html.EditorFor(model => model.InsuranceAmount, new { htmlAttributes = new { @class = "form-control", placeholder = "Insurance Amount" } })
                @Html.ValidationMessageFor(model => model.InsuranceAmount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-xs-12 px-0"><i class="icon-calendar-7"></i> Insurance Expirey</label>
            <div class="col-xs-12 col-sm-10 px-0">
                @Html.EditorFor(model => model.InsuranceExpirey, new { htmlAttributes = new { @class = "form-control date-pick", placeholder = "M d, D" } })
                @Html.ValidationMessageFor(model => model.InsuranceExpirey, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>

    <div id="pass-info" class="clearfix"></div>
    <div class="col-xs-12 col-sm-11 text-right px-10">
        <button class="btn_1 d-inline-block">Save Details</button>
    </div>


</div>
