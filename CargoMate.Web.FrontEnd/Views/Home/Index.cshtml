@{
    ViewBag.Title = "Home Page";
}

<!--banner Section start-->
<section id="search_container" style="min-height:100%">
    <div id="search">
        <div class="tab-content">
            <div class="tab-pane active" id="tab1">
                <h3>Search Vehicles</h3>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>PickUp Address</label>
                            <input type="text" class="form-control placePicker" name="pickUpAddress" placeholder="Type your search terms">
                            <input type="hidden" id="pickUpAddress" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>DropUp Address</label>
                            <input type="text" class="form-control placePicker" name="dropUpAddress" placeholder="Type your search terms">
                            <input type="hidden" id="pickUpAddress" />
                        </div>
                    </div>
                </div><!-- End row -->
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label><i class="icon-calendar-7"></i> Date</label>
                            <input class="date-pick form-control" data-date-format="M d, D" type="text">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label><i class="icon-calendar-7"></i> Pay Load Type</label>
                            <select class="ddslick" name="PayLoadType">
                                <option value="0" data-imagesrc="../../images/icons_search/all_tours.png" selected>All</option>
                                <option value="1" data-imagesrc="../../images/icons_search/sightseeing.png">Pay Load Type 1</option>
                                <option value="2" data-imagesrc="../../images/icons_search/museums.png">Pay Load Type 2</option>
                                <option value="3" data-imagesrc="../../images/icons_search/historic.png">Pay Load Type 3</option>
                                <option value="4" data-imagesrc="../../images/icons_search/walking.png">Pay Load Type 4</option>
                                <option value="5" data-imagesrc="../../images/icons_search/eat.png">Pay Load Type 5</option>
                                <option value="6" data-imagesrc="../../images/icons_search/churches.png">Pay Load Type 5</option>
                                <option value="7" data-imagesrc="../../images/icons_search/skyline.png">Pay Load Type 6</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Vehicle Type</label>
                            <select class="ddslick" name="category">
                                <option value="0" data-imagesrc="../../images/icons_search/all_tours.png" selected>All</option>
                                <option value="1" data-imagesrc="../../images/icons_search/sightseeing.png">Vehicle Type 1</option>
                                <option value="2" data-imagesrc="../../images/icons_search/museums.png">Vehicle Type 2</option>
                                <option value="3" data-imagesrc="../../images/icons_search/historic.png">Vehicle Type 3</option>
                                <option value="4" data-imagesrc="../../images/icons_search/walking.png">Vehicle Type 4</option>
                                <option value="5" data-imagesrc="../../images/icons_search/eat.png">Vehicle Type 5</option>
                                <option value="6" data-imagesrc="../../images/icons_search/churches.png">Vehicle Type 6</option>
                                <option value="7" data-imagesrc="../../images/icons_search/skyline.png">Vehicle Type 7</option>
                            </select>
                        </div>
                    </div>                  
                </div><!-- End row -->
                <hr>
                <button class="btn_1 green"><i class="icon-search"></i>Search now</button>
            </div><!-- End rab -->
            
        </div>
    </div>
</section><!-- End hero -->
