@model CargoMate.Web.FrontEnd.Models.SearchVehicleViewModels.SearchVehicleViewModel
@{
    ViewBag.Title = "Home Page";
}

@section styles{
    <style>
        .dd-selected-text {
            line-height: 35px;
        }
    </style>   
}

<!--banner Section start-->
<section id="search_container" style="min-height:100%">
    <div id="search">
        <div class="tab-content">
            <div class="tab-pane active" id="tab1">
                <h3>Search Vehicles</h3>
                
                @using (Ajax.BeginForm("", "", null, new AjaxOptions { HttpMethod = "POST" }, new { @class = "VehicleSearchFilter" }))
                {

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @*@Html.LabelFor(model => model.PickUpAddress)*@
                            <label><i class="icon-globe-1"></i>PickUp Address</label>
                            @Html.EditorFor(model => model.PickUpAddress, new { htmlAttributes = new { @class = "form-control placePicker", placeholder = "Type your pickup address" } })
                            @Html.ValidationMessageFor(model => model.PickUpAddress, "", new { @class = "text-danger" })
                            
                            @Html.HiddenFor(model => model.PickUpLocation)
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @*@Html.LabelFor(model => model.DropUpAddress)*@
                            <label><i class="icon-globe-1"></i>DropUp Address</label>
                            @Html.EditorFor(model => model.DropUpAddress, new { htmlAttributes = new { @class = "form-control placePicker", placeholder = "Type your dropup address" } })
                            @Html.ValidationMessageFor(model => model.DropUpAddress, "", new { @class = "text-danger" })

                            @Html.HiddenFor(model => model.DropUpLocation)
                        </div>
                    </div>
                </div><!-- End row -->
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label><i class="icon-calendar-7"></i> Date</label>
                            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control date-pick", placeholder = "M d, D", data_date_format="M d, D" } })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group overflow-false">
                            <label>Pay Load Type</label>
                            @Html.DropDownListFor(model => model.PayLoadTypeId, new SelectList(Model.PayLoadTypes, "Value", "Text"), "Select PayLoad Type", new { @class = "ddslick" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group overflow-false">
                            <label>Vehicle Type</label>
                            @Html.DropDownListFor(model => model.VehicleTypeId, new SelectList(Model.VehicleTypes, "Value", "Text"), "Select Vehicle Type", new { @class = "ddslick" })
                        </div>
                    </div>                  
                </div><!-- End row -->
                <hr>
                <a href="@Url.Action("SearchResults", "Home")" class="btn_1 green"><i class="icon-search"></i>Search now</a>
                }
            </div><!-- End rab -->
            
        </div>
    </div>
</section><!-- End hero -->
@*@Html.Partial("Partials/_Search")*@

@section scripts{
    <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?libraries=places&key=AIzaSyC88G_-I2GZl8sVDs95qoxcuqBy9_q36nQ&force=lite"></script>
    <script src="~/Scripts/Plugins/jquery.placepicker.min.js"></script>
    <script src="~/AppScripts/Home/Home.js"></script>
}


