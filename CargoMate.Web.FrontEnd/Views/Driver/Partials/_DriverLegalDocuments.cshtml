@model CargoMate.Web.FrontEnd.Models.DriverViewModel.DriverLegalDocumentsFormModel
<div id="login" class="login-min-height my-0 py-0">
    <div class="text-center">
        <h3 class="text-left"><i class="icon-user-1"></i> Licence & Residence Information</h3>
        <p class="text-left pl-3">*Please provide valid information to get better services.</p>
    </div>
    <hr />
    @using (Ajax.BeginForm("EditDriverDocuments", "Driver", null, new AjaxOptions { HttpMethod = "POST", OnSuccess = "Driver.CallBacks.InsertSuccess" }, new { }))
    {

        @Html.HiddenFor(model => model.Id)

        @* Left column *@
        <div class="col-xs-12 col-sm-6 col-md-push-1 float-right-left">
            <div class="form-group">
                <label class="col-xs-12 px-0">Residence Number</label>
                <div class="col-xs-12 col-sm-10 px-0">
                    @Html.EditorFor(model => model.ResidenceNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Residence Number" } })
                    @Html.ValidationMessageFor(model => model.ResidenceNumber, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-xs-12 px-0"><i class="icon-calendar-7"></i> Residence Expirey</label>
                <div class="col-xs-12 col-sm-10 px-0">
                    @Html.EditorFor(model => model.ResidenceExpiryDate, new { htmlAttributes = new { @class = "date-pick form-control", placeholder = "MM/DD/YYYY", data_date_format = "mm/dd/yyyy" } })
                    @Html.ValidationMessageFor(model => model.ResidenceExpiryDate, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-xs-12 px-0">Residence Image</label>
                <div class="col-xs-12 col-sm-10 px-0">
                    @Html.HiddenFor(model => model.ResidenceImage)
                    @Html.Editor("ResidenceImage", new { htmlAttributes = new { @class = "form-control", type = "file" } })
                    @Html.ValidationMessageFor(model => model.ResidenceImage, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        @* Right column *@
        <div class="col-xs-12 col-sm-6 float-right-left">

            <div class="form-group">
                <label class="col-xs-12 px-0">Licence Number</label>
                <div class="col-xs-12 col-sm-10 px-0">
                    @Html.EditorFor(model => model.LicenseNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Licence Number" } })
                    @Html.ValidationMessageFor(model => model.LicenseNumber, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-xs-12 px-0"><i class="icon-calendar-7"></i> Licence Expirey</label>
                <div class="col-xs-12 col-sm-10 px-0">
                    @Html.EditorFor(model => model.LicenseExpiryDate, new { htmlAttributes = new { @class = "date-pick form-control", placeholder = "MM/DD/YYYY", data_date_format = "mm/dd/yyyy" } })
                    @Html.ValidationMessageFor(model => model.LicenseExpiryDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-xs-12 px-0">Licence Picture</label>
                <div class="col-xs-12 col-sm-10 px-0">
                    @Html.HiddenFor(model => model.LicenseImage)
                    @Html.Editor("LicenseImage", new { htmlAttributes = new { @class = "form-control", type = "file" } })
                    @Html.ValidationMessageFor(model => model.LicenseImage, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>

        <div id="pass-info" class="clearfix"></div>
        <div class="col-xs-12 col-sm-11 text-right px-10">
            <button class="btn_1 d-inline-block">Update Licence Info</button>
        </div>
    }

</div>

