            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-equalizer font-red-sunglo"></i>
                        <span class="caption-subject font-red-sunglo bold uppercase">PayLoad Types</span>
                        <span class="caption-helper">Edit PayLoad Type</span>
                    </div>
                    <div class="actions">

                    </div>
                </div>
                <div class="portlet-body form">
                    <!-- BEGIN FORM-->
                    @using (Ajax.BeginForm("UpdatePayLoadType", null, null, new { enctype = "multipart/form-data", id = "UpdatePayLoadTypeForm" }))
                    {
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-horizontal">
                            <div class="form-body" id="EditPayLoadTypeContent">
                            </div>
                            <div class="row" style="margin-top: -20px">
                                <div class="col-sm-12 col-sm-offset-3">
                                    <button type="submit" name="submitButton" value="save" style="padding-left: 20px; padding-right: 20px" class="btn green">Save</button>
                                    <button type="reset" style="padding-left: 20px; padding-right: 20px" data-dismiss="modal" class="btn red">Close</button>
                                </div>
                            </div>
                        </div>
                    }
