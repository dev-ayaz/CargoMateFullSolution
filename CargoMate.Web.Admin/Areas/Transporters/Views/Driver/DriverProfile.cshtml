@using CargoMate.Web.Admin.Areas.Transporters.Models
@model CargoMate.Web.Admin.Areas.Transporters.Models.DriverViewModel
@{
    ViewBag.Title = "DriverProfile";
}

@section styles{
    <link href="~/assets/pages/css/profile-2.css" type="text/css" rel="stylesheet" />
    <style>
        .nav.list-block label {
            font-weight: bold;
            width: 200px;
        }
        .nav.list-block li {
            margin-bottom: 5px;
        }
    </style>
}

<div class="page-content-wrapper">
    <div class="page-content">
        <div class="profile">
            <div class="tabbable-line tabbable-full-width">
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a href="#tab_1_1" data-toggle="tab"> Profile </a>
                    </li>
                    <li>
                        <a href="#tab_1_3" data-toggle="tab"> Vehicles </a>
                    </li>
                    <li>
                        <a href="#tab_1_6" data-toggle="tab"> Trip History </a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="tab_1_1">
                        <div class="row">
                            <div class="col-md-3">
                                <ul class="list-unstyled profile-nav">
                                    <li>
                                        <img src="@Model.DriverPersonalInfoDisplayModel.ImageUrl" class="img-responsive pic-bordered" alt="">
                                        <a href="javascript:;" class="profile-edit"> edit </a>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-md-9">
                                <div class="row">
                                    @Html.Partial("Partials/_DriverPersonalInfo", Model.DriverPersonalInfoDisplayModel)
                                    <!--end col-md-8-->
                                    <div class="col-md-4">
                                        <div class="portlet sale-summary">
                                            <div class="portlet-title">
                                                <div class="caption font-red sbold"> Sales Summary </div>
                                                <div class="tools">
                                                    <a class="reload" href="javascript:;" data-original-title="" title=""> </a>
                                                </div>
                                            </div>
                                            <div class="portlet-body">
                                                <ul class="list-unstyled">
                                                    <li>
                                                        <span class="sale-info">
                                                            TODAY SOLD
                                                            <i class="fa fa-img-up"></i>
                                                        </span>
                                                        <span class="sale-num"> 23 </span>
                                                    </li>
                                                    <li>
                                                        <span class="sale-info">
                                                            WEEKLY SALES
                                                            <i class="fa fa-img-down"></i>
                                                        </span>
                                                        <span class="sale-num"> 87 </span>
                                                    </li>
                                                    <li>
                                                        <span class="sale-info"> TOTAL SOLD </span>
                                                        <span class="sale-num"> 2377 </span>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <!--end col-md-4-->
                                </div>
                                <!--end row-->
                                <div class="tabbable-line tabbable-custom-profile">
                                    <ul class="nav nav-tabs">
                                        <li class="active">
                                            <a href="#tab_1_11" data-toggle="tab"> Driver Documents </a>
                                        </li>
                                    </ul>
                                    <div class="tab-content">
                                        <div class="tab-pane active" id="tab_1_11">
                                            <div class="portlet-body">
                                                @Html.Partial("Partials/_DriverLegalDocuments", Model.DriverLegalDocumentsDisplayModel)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--tab_1_2-->
                    <div class="tab-pane" id="tab_1_3">
                        <div class="row profile-account">
                            <div class="col-xs-12">
                                @Html.Partial("Partials/_DriverVehicles", Model.DriverVehicleDisplayModel)
                            </div>
                        </div>
                    </div>
                    <!--end tab-pane-->
                    <div class="tab-pane" id="tab_1_6">
                        <div class="row">

                        </div>
                    </div>
                    <!--end tab-pane-->
                </div>
            </div>
        </div>
    </div>
</div>

